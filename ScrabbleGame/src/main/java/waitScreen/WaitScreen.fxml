                              <Color red="0.9894737005233765" green="0.9638206362724304" blue="0.9638206362724304" />
                           </color>
                        </Stop>
                        <Stop offset="1.0">
                           <color>
                              <Color red="0.9684210419654846" green="0.7603898644447327" blue="0.7603898644447327" />
                           </color>
                        </Stop>
                     </stops>
                  </RadialGradient>
               </textFill>
            </Label>
            <ProgressIndicator />
